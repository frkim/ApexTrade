# =============================================================================
# ApexTrade Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# Security Keys
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# PostgreSQL Database
# =============================================================================
POSTGRES_USER=apextrade
POSTGRES_PASSWORD=apextrade
POSTGRES_DB=apextrade
DATABASE_URL=postgresql://apextrade:apextrade@postgres:5432/apextrade

# =============================================================================
# TimescaleDB (Time-series data)
# =============================================================================
TIMESCALE_USER=apextrade
TIMESCALE_PASSWORD=apextrade
TIMESCALE_DB=apextrade_timeseries
TIMESCALE_URL=postgresql://apextrade:apextrade@timescaledb:5432/apextrade_timeseries

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# =============================================================================
# MinIO (Object Storage)
# =============================================================================
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=apextrade
MINIO_USE_SSL=false

# =============================================================================
# Trading API Keys
# =============================================================================
# Alpaca (Paper Trading)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# Polygon.io
POLYGON_API_KEY=

# Alpha Vantage
ALPHA_VANTAGE_API_KEY=

# Interactive Brokers
IB_GATEWAY_HOST=
IB_GATEWAY_PORT=4001
IB_CLIENT_ID=1

# =============================================================================
# External Services
# =============================================================================
# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@apextrade.io

# Sentry (Error Tracking)
SENTRY_DSN=

# =============================================================================
# Monitoring
# =============================================================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
GRAFANA_ROOT_URL=http://localhost:3001

# =============================================================================
# Frontend
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost/api
NEXT_PUBLIC_WS_URL=ws://localhost/ws

# =============================================================================
# CORS Settings
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://localhost

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10
